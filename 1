const text = "Êúà„ÅÆÂÖâ„ÅØÊÑõ„ÅÆ„É°„ÉÉ„Çª„Éº„Ç∏ÔºÅ(The Moonlight is a message of love!)";
const typingElement = document.querySelector(".sailor-typing");
let index = 0;

function typeText() {
    if (index < text.length) {
        typingElement.textContent += text[index];
        index++;
        setTimeout(typeText, 100);
    }
}

typeText();
